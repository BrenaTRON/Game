package sample;

import javafx.application.Application;
import javafx.event.EventHandler;
import javafx.scene.Scene;
import javafx.stage.Stage;
import javafx.scene.layout.*;
import javafx.geometry.*;
import javafx.scene.control.Button;
import javafx.event.ActionEvent;
import javafx.scene.layout.StackPane;
import javafx.scene.control.Label;
import javafx.stage.Screen;
public class Main extends Application {
    public static int count = 0;
    @Override
    public void start(Stage primaryStage) {
        primaryStage.setTitle("JavaFx Welcome");
        Rectangle2D primaryScreenBounds = Screen.getPrimary().getVisualBounds();
        primaryStage.setWidth(primaryScreenBounds.getWidth());
        primaryStage.setHeight(primaryScreenBounds.getHeight());
        GridPane grid = new GridPane();
        grid.setAlignment(Pos.TOP_LEFT);
        grid.setHgap(10);
        grid.setVgap(10);
        grid.setPadding(new Insets(25, 25, 25, 25));
        Scene scene = new Scene(grid, 300, 300);
        primaryStage.setScene(scene);
        Button btn = new Button();
        btn.setStyle(
                "-fx-background-radius: 20em; " +
                        "-fx-min-width: 150px; " +
                        "-fx-min-height: 150px; " +
                        "-fx-max-width: 150px; " +
                        "-fx-max-height: 150px;" +
                        "-fx-background-color: #ff0000;"

        );
        grid.add(btn, 0, 0);
        reposition(grid, btn);
        primaryStage.show();
    }

    public static void reposition(GridPane grid, Button btn) {
        long createdMills = System.currentTimeMillis();
        btn.setOnAction(new EventHandler<ActionEvent>() {

            @Override
            public void handle(ActionEvent e) {
                long currentTime = System.currentTimeMillis();
                Rectangle2D primaryScreenBounds = Screen.getPrimary().getVisualBounds();
                int width = (int) primaryScreenBounds.getWidth();
                int height = (int) primaryScreenBounds.getHeight();
                if (((currentTime - createdMills) / 1000.0) > (2 - .09 * count) && count != 0 )
                {
                    grid.getChildren().remove(btn);
                    StackPane stack =  new StackPane();
                    stack.getChildren().addAll( new Label("You took too long - Better Luck Next Time!"));
                    grid.add(stack, 45, 45);
                }
                else if( count > 18 )
                {
                    grid.getChildren().remove(btn);
                    StackPane stack =  new StackPane();
                    stack.getChildren().addAll( new Label("Congratulations - You Win!"));
                    grid.add(stack, 45, 45);
                }
                else
                {
                    count++;
                    grid.getChildren().remove(btn);
                    Button btn1 = new Button();
                    btn1.setStyle(
                            "-fx-background-radius: 20em; " +
                                    "-fx-min-width: 150px; " +
                                    "-fx-min-height: 150px; " +
                                    "-fx-max-width: 150px; " +
                                    "-fx-max-height: 150px;" +
                                    "-fx-background-color: #ff0000;"

                    );
                    int col = (int) (Math.random() * (width / 10 - 17));
                    int row = (int) (Math.random() * (height / 10 - 17));
                    grid.add(btn1, col, row);
                    reposition(grid, btn1);
                }
            }
        });

    }
}
